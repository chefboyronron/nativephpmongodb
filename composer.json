        "friendsofphp/php-cs-fixer": "^2.4",
        "mikey179/vfsStream": "^1.6"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Andrew Berry",
            "email": "andrew.berry@lullabot.com"
        }
    ],
    "autoload": {
        "psr-4": {
